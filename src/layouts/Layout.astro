---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="top-header container">
				<img
					src="https://http2.mlstatic.com/frontend-assets/ml-web-navigation/ui-navigation/6.6.73/mercadolibre/logo_large_25years_v2.png"
					alt="logo"
				/>
				<div class="input">
					<input type="text" placeholder="Escribe algo y encuentra" />
					<button>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24 
							stroke-width="1.5"
							stroke="currentColor"
							class="size-6">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
							/>
						</svg>
					</button>

					<p>publicidad</p>
				</div>
			</div>
			<div class="banner"></div>
			<div class="cards container">
				<div class="card"></div>
				<div class="card"></div>
				<div class="card"></div>
				<div class="card"></div>
				<div class="card"></div>
				<div class="card"></div>
			</div>
			<slot />
		</header>
	</body>
	<style>
		html,
		body {
			padding: 0;
			margin: 0;
			background-color: rgba(235,235,235,255);
		}
		header {
			height: 80px;
			background: rgba(255,230,0,255);
			padding-top: 12px;
		}
		header img {
			width: 120px;
		}
		header input {
			box-sizing: border-box;
			width: 80%;
			display: inline;
			padding: 10px 8px;
			border-top-left-radius: 3px;
			border-bottom-left-radius: 3px;
			border: none;
			height: 36px;
			outline: none;
		}
		header button {
			display: inline;
			width: 32px;
			border: none;
			background: white;
			height: 36px;
			border-top-left-radius: 3px;
			border-bottom-left-radius: 3px;
		}
		.input {
			display: flex;
			align-items: center;
		}
		.banner {
			height: 280px;
			background: linear-gradient(
				to bottom,
				rgba(255,230,0,255) 60%,
				rgba(235,235,235,255) 100%
			);
		}
		.container {
			max-width: 1200px;
			margin: 0 auto;
		}
		.cards {
			display: flex;
			gap: 10px;
			margin-top: -80px;
			height: 240px;
			column-count: 6;
		}
		.card {
			flex-grow: 1;
			background-color: white;
			border-radius: 6px;
		}
		.top-header {
			column-count: 3;
		}
	</style>
</html>
